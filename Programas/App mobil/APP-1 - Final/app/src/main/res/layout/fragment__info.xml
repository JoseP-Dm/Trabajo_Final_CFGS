<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E5FF"
    tools:context=".Controlador.Fragment_Info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fragment3">

        <LinearLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:gravity="center"
                android:text="Chip:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Mchip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Michroxip de la mascota"
                android:textColor="#FFFFFE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:gravity="center"
                android:text="Fecha de nacimineto:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Mnaixement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Edad"
                android:textColor="#FFFFFE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:gravity="center"
                android:text="Especie:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Mespecie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Perro/Gato/Otro"
                android:textColor="#FFFFFE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:gravity="center"
                android:text="Raza:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Mraza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Raza de la mascota"
                android:textColor="#FFFFFE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:gravity="center"
                android:text="Sexo:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Msexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Macho/Hembra"
                android:textColor="#FFFFFE"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:gravity="center"
                android:text="Castrado:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/MCastrado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Castrado/Sin castrar"
                android:textColor="#FFFFFE"
                android:textSize="18dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>